<%= form_with url: "/users/#{@post.author_id}/posts/#{@post.id}/comments", scope: :comment do |form| %>
  <%= form.text_area :text, size: "10x2", class: "mb-3 py-3 px-3 w-100 border-0 shadow", placeholder: "Enter post text" %> <br>
  <%= form.submit "Submit comment", class: "btn btn-info py-2 px-5 text-white" %>
<% end %> 